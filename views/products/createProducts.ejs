<!DOCTYPE html>
<html lang="en">
     <!-- Head -->
    <%- include('./../partials/head') %>
<body>

     <!-- Header -->
     <%- include('./../partials/header') %>
    
     <main class="register-main">

        <form action="/products" method="POST" enctype="multipart/form-data" class="formCreate">

        <section class="register-custom">
            <h4>AGREGAR PRODUCTO</h4>
            <input class="controls namefield" type="text" name="name" id="name" placeholder="Nombre del Producto">
            <div class="controls sectionfield"><label for="section">Seccion :</label>
                <select name="section" id="section" style="font-family: 'Audiowide'; text-transform: uppercase;">
                    <% for (let i = 0; i < sections.length; i++) { %>
                        <option value="<%=sections[i].id%>">
                            <%= sections[i].name%>
                        </option>
                        <% } %>
                </select></div>
            <input class="controls pricefield" type="number" name="price" id="price" placeholder="Precio del Producto">
            <input class="controls discountfield" type="number" name="discount" id="discount" placeholder="Descuento del Producto">
           <!-- <p class="controls"> Producto en Oferta  <input type="checkbox" id="category" name="category" value="ofertas"></p>-->
            <div class="controls"><label for="description">Descripci√≥n del Producto:</label>
            <textarea style="width: 100% ; height: 80px;" name="description" id="description" class="descriptionfield"></textarea></div>
            <input class="controls" type="file" name="image" id="image" accept=".jpg,.png" multiple placeholder="Seleccionar Imagen">
            <ul class="erroresCreate" style="list-style-type:none;"></ul>
            <input class="boton" type="submit" value="Agregar">
        </section>
        </form>

    </main>

     <!-- Footer -->
     <%- include('./../partials/footer') %>
     <script src="/js/createScript.js"></script>
</body>
</html>