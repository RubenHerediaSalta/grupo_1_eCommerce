<!DOCTYPE html>
<html lang="en">
     <!-- Head -->
     <%- include('./../partials/head') %>
<body>
    <!-- Header -->
    <%- include('./../partials/header') %>

    <main class="register-main">
        <form action="/users/editUser/<%= user.id %>/?_method=PUT" method="POST" enctype="multipart/form-data" class="formRegister">

            <section class="register-custom">
                <h4>EDITAR <%= user.firstName %> </h4>
                <% if (locals.errors && errors.firstName) { %> <%= errors.firstName.msg %><% } %>
                <input class="controls <%= locals.errors && errors.firstName ? 'errorform' : null %> firstnamefield" type="text" name="firstName" id="firstName" placeholder="Ingrese su nombre" value="<%= user.firstName %>">
                <% if (locals.errors && errors.lastName) { %> <%= errors.lastName.msg %><% } %>
                <input class="controls <%= locals.errors && errors.lastName ? 'errorform' : null %> lastnamefield" type="text" name="lastName" id="lastName" placeholder="Ingrese su apellido" value="<%= user.lastName %>">
                <% if (locals.errors && errors.email) { %> <%= errors.email.msg %><% } %>
                <input class="controls <%= locals.errors && errors.email ? 'errorform' : null %> emailfield" type="email" name="email" id="email" placeholder="Ingrese su correo" value="<%= user.email %>">
              
                <div class="controls"><label for="avatar">Imagen de perfil:</label>
                <input class="controls" type="file" name="avatar" id="avatar" accept=".jpg,.png" multiple placeholder="Seleccionar Imagen"></div>
                <ul class="erroresRegister" style="list-style-type:none;"></ul>
                <input class="boton" type="submit" value="Editar">
            </section>
        </form>
    </main>

    <!-- Footer -->
    <%- include('./../partials/footer') %>
    <script src="/js/registerScript.js"></script>
</body>
</html>